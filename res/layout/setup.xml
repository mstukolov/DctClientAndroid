<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:background="@android:color/black">


        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Магазин:"
                android:id="@+id/label" android:textSize="28dp" android:layout_weight="0.03" android:layout_row="0"
                android:layout_column="0" android:singleLine="true"
                android:textColor="#ffffffff" android:textStyle="bold"/>
        <Spinner
                android:id="@+id/shops_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="0"
                android:background="@android:color/black"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Директор:"
                android:id="@+id/textView3" android:layout_row="2" android:layout_column="0" android:textSize="28dp"
                android:textIsSelectable="true" android:textStyle="bold" android:textColor="#ffffffff"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/editDirector" android:layout_row="3" android:layout_column="0"
                android:background="#ffffffff" android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сервер:"
                android:id="@+id/textView4" android:layout_row="2" android:layout_column="0" android:textSize="28dp"
                android:textIsSelectable="true" android:textStyle="bold" android:textColor="#ffffffff"
                android:paddingTop="15dp" android:paddingBottom="0dp" android:layout_weight="0.05"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/editServerIP" android:layout_row="3" android:layout_column="0"
                android:background="#ffffffff" android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Записать"
                android:id="@+id/save_setup_btn" android:layout_weight="0.44" android:background="@drawable/shipment_btn"
                android:textSize="24dp" android:textStyle="bold"/>
</LinearLayout>