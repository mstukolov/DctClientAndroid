<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#FF0000" />
            <stroke
                    android:width="1dp"
                    android:color="#222222" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#FFA3C2"
                    android:endColor="#FF3300"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#3D3D3D" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>